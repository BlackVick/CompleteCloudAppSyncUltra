    <!--  LOADING DIALOG THEME  -->
    <style name="LoadingDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  DIALOG APPEARANCE THEME  -->
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <!--  PROGRESS THEME -->
    <style name="ProgressTheme" parent="UltraLightTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <!--  SYNC PROGRESS THEME -->
    <style name="SyncProgressTheme" parent="UltraLightTheme">
