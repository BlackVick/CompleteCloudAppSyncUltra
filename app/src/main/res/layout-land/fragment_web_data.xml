<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeTabs.WebData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/settingsPage"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/onlineCard"
                    app:cardBackgroundColor="?attr/cardBackgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_load_online"
                            android:layout_gravity="center"
                            app:tint="?attr/tintColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Load Online Page"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/localCard"
                    app:cardBackgroundColor="?attr/cardBackgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_load_local"
                            android:layout_gravity="center"
                            app:tint="?attr/tintColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Load Local Page"
                            android:textSize="13sp"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/listLocalsCard"
                    app:cardBackgroundColor="?attr/cardBackgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_all_directories"
                            android:layout_gravity="center"
                            app:tint="?attr/tintColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="File Viewer"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/downloadCard"
                    app:cardBackgroundColor="?attr/cardBackgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_download_zip"
                            android:layout_gravity="center"
                            app:tint="?attr/tintColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Zip File"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/masterUrlCard"
                    app:cardBackgroundColor="?attr/cardBackgroundColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_show_master"
                            android:layout_gravity="center"
                            app:tint="?attr/tintColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show Licence"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    android:id="@+id/visitUs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/the_launcher"
                            android:layout_gravity="center"
                            android:id="@+id/visitImage"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visit Us"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textColor="?attr/textColor"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>